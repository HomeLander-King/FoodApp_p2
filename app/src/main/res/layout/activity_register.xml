<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@drawable/bg_activity_login"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:text="Register"
        android:textColor="#FDFCFD"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
    
    <EditText
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/editUsername"
        android:textSize="15dp"
        android:hint="Username"
        android:ems="10"
        android:drawableStart="@drawable/custom_account_item"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"/>

    <EditText
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/editPassword"
        android:textSize="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:ems="10"
        android:drawableStart="@drawable/custom_lock_item"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"/>

    <EditText
        android:layout_width="311dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/editRePassword"
        android:textSize="15dp"
        android:hint="RePassword"
        android:inputType="textPassword"
        android:ems="10"
        android:drawableStart="@drawable/custom_lock_item"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_addcart"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Register"
        android:id="@+id/btnRegister"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="145dp"
        android:text="Â© 2021 Sunburt, Inc"
        android:layout_marginLeft="40dp"
        android:textColor="#FDFCFD"
        android:textSize="15dp" />

</LinearLayout>